// --- ENTIDAD DE USUARIO ---
// Almacena la información fundamental del usuario.
model User {
  id        String   @id @default(uuid())
  email     String   @unique
  name      String?
  passwordHash  String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  role      Role     @default(USER)

  // --- Campos de Verificación ---
  emailVerified              Boolean  @default(false)      // (Pequeño cambio de nombre a un inglés más común)
  verificationToken          String?  @unique             // 1. El token específico para verificar email
  verificationTokenExpires   DateTime?                     // 2. La fecha en que ese token expira
  
  // Ya no necesitas el campo genérico "token"
}

